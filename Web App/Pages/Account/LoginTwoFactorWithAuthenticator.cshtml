@page
@model Web_App.Pages.Account.LoginTwoFactorWithAuthenticatorModel
@{
}

<p>
    <h3>
        Please enter the code from your authenticator app
    </h3>
</p>
<div class="container border" stye="padding:20px">
    <form method = "post">
        <div class="text-danger" asp-validation-summary = "All"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AuthenticatorMFA.SecurityCode" ></label>
            </div>
            <div class="col">
                <input type="text" class="form-control" asp-for="AuthenticatorMFA.SecurityCode" />
            </div>
            <span class="text-danger" asp-validation-for="AuthenticatorMFA.SecurityCode"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Verify" />
            </div>
            <div class="col">
                <input type="hidden" asp-for="AuthenticatorMFA.RememberMe" />
            </div>
        </div>
    </form>
</div>