@page
@model Web_App.Pages.Account.RegisterModel
@{
}
<p>
<h3>User Registration</h3>
</p>
<div class="container border" style = "padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RegisterVM.Email"></label>
            </div>
            <div class="col-5">
                <input type = "text" asp-for="RegisterVM.Email" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="RegisterVM.Email"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RegisterVM.Password"></label>
            </div>
            <div class="col-5">
                <input type = "password" asp-for="RegisterVM.Password" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="RegisterVM.Password"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RegisterVM.Department"></label>
            </div>
            <div class="col-5">
                <input type = "text" asp-for="RegisterVM.Department" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="RegisterVM.Department"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RegisterVM.Position"></label>
            </div>
            <div class="col-5">
                <input type = "text" asp-for="RegisterVM.Position" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="RegisterVM.Position"></span>
        </div>
        <br />
        <div class = "form-group row">
            <div class = "col-2">
                <input  type="submit" class="btn btn-primary" value="Register"/>
            </div>
        </div>
    </form>
</div>
